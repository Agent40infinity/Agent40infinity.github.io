<img class="return" src="../Resources/SVGs/Caret.svg" alt="Caret" onclick="returnTop()" />

<script>
    const topAnimateDist = 200;

    $(document).ready(function () {
        // Animates the header once too far down.
        // Makes the header / navigation banner transparent.
        $(window).scroll(function () {
            var screenTop = $(window).scrollTop();

            if (screenTop >= topAnimateDist) {
                $('.return').fadeIn(200);
            }
            else {
                $('.return').fadeOut(200);
            }
        });
    });

    // Used to return to the top of the page.
    function returnTop() {
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }
</script>

<style>
.return {
    display: none;
    position: fixed;
    bottom: 10px;
    right: 10px;
    height: 25px;
    width: 25px;
    color: white;
    filter: invert(100%);
    border-radius: 4px;
    background-color: rgb(107, 107, 107);
    z-index: 5;
}

.return:hover {
    background-color: rgb(179, 179, 179);
}
</style>